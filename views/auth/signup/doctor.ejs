<%- layout("/layouts/boilerplate") %>

<div class="container-fluid row mt-3">
    <h1 class="col-8 offset-2">Doctor SignUp</h1>
    <div class="col-8 offset-2">
        <form action="/doctor/signup" method="POST" class="needs-validation" novalidate>
            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                <input type="email" name="doctor[email]" id="email" placeholder="Enter email" class="form-control" required>
            </div>
            <div class="row">
                <!-- Username -->
                <div class="mb-3 col-6">
                    <label for="username" class="form-label">Username <span class="text-danger">*</span></label>
                    <input type="text" name="doctor[username]" id="username" placeholder="Enter username" class="form-control" required>
                </div>
                <!-- Password -->
                <div class="mb-3 col-6">
                    <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                    <input type="password" name="doctor[password]" id="password" placeholder="Enter password" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <!-- Specialization -->
                <div class="mb-3 col-6">
                    <label for="specialization" class="form-label">Specialization <span class="text-danger">*</span></label>
                    <input type="text" name="doctor[specialization]" id="specialization" placeholder="Enter specialization" class="form-control" required>
                </div>
                <!-- Experience -->
                <div class="mb-3 col-6">
                    <label for="experience" class="form-label">Years of Experience <span class="text-danger">*</span></label>
                    <input type="number" name="doctor[experience]" id="experience" placeholder="Enter years of experience" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <!-- Hospital -->
                <div class="mb-3 col-6">
                    <label for="hospital" class="form-label">Hospital Name <span class="text-danger">*</span></label>
                    <input type="text" name="doctor[hospital]" id="hospital" placeholder="Enter hospital name" class="form-control" required>
                </div>
                <!-- Consultant Fees -->
                <div class="mb-3 col-6">
                    <label for="consultantFees" class="form-label">Consultant Fees <span class="text-danger">*</span></label>
                    <input type="number" name="doctor[consultantFees]" id="consultantFees" placeholder="Enter fees" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <!-- Phone -->
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number <span class="text-danger">*</span></label>
                    <input type="text" name="doctor[phone]" id="phone" placeholder="Enter phone number" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <!-- Profile Image URL -->
                <label for="profile" class="form-label">Profile Image URL</label>
                <input type="text" name="doctor[profile]" id="profile" placeholder="Enter profile image URL" class="form-control">
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Sign up</button>
            </div>
        </form>
    </div>
</div>
