<%- layout("./layouts/doctorboilerplate") %>

<style>
  .appointments-container {
    padding: 20px;
  }
  .appointments-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
  }
  .appointments-table th, .appointments-table td {
    padding: 12px;
    border-bottom: 1px solid #ddd;
  }
  .appointments-table th {
    background-color: #f8f9fa;
  }
  .actions .btn {
    margin-right: 5px;
  }
</style>

<div class="appointments-container">
  <h2>All Appointments</h2>
  <table class="appointments-table">
    <thead>
      <tr>
        <th>Patient Name</th>
        <th>Appointment Date</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Gender</th>
        <th>Status</th>
        <th>Disease</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (appointments.length === 0) { %>
        <tr>
          <td colspan="8">No appointments found.</td>
        </tr>
      <% } else { %>
        <% appointments.forEach(appt => { %>
          <tr>
            <td><%= appt.patientId ? appt.patientId.username : "N/A" %></td>
            <td><%= new Date(appt.date).toLocaleDateString() %></td>
            <td><%= appt.patientId ? appt.patientId.email : "N/A" %></td>
            <td><%= appt.patientId ? appt.patientId.phone : "N/A" %></td>
            <td><%= appt.patientId ? appt.patientId.gender : "N/A" %></td>
            <td><%= appt.status %></td>
            <td><%= appt.disease || "N/A" %></td>
            <td class="actions">
              <a href="/doctor/appointments/<%= appt._id %>/addRecord" class="btn btn-primary">
                Insert Data
              </a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>
