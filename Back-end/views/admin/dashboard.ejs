<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- Optional: Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2Dhcn4s1urUqWf2c2F+3fbyGzwixQ08i9OR8Ep/67v6BM0BHTA4j4F4Xrl1Pb1Rsw==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

    <!-- Custom CSS (you can move this to a separate .css file) -->
    <style>
      :root {
        --sidebar-bg: #222e3c;
        --sidebar-active: #2f3f50;
        --primary-color: #ff6600; /* or your orange accent */
        --text-color: #fff;
        --muted-text-color: #aaa;
        --card-bg: #2c3949;
        --body-bg: #1f2937;
      }

      body {
        background-color: var(--body-bg);
        color: var(--text-color);
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      .sidebar {
        width: 240px;
        background-color: var(--sidebar-bg);
        min-height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
      }

      .sidebar .brand {
        padding: 1rem;
        font-size: 1.25rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--primary-color);
        border-bottom: 1px solid #444;
      }

      .sidebar .profile-section {
        text-align: center;
        padding: 1rem;
      }

      .sidebar .profile-section img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 0.5rem;
      }

      .sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar ul li {
        border-bottom: 1px solid #444;
      }

      .sidebar ul li a {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        color: var(--text-color);
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

      .sidebar ul li a:hover {
        background-color: var(--sidebar-active);
      }

      .sidebar ul li a i {
        margin-right: 0.5rem;
      }

      .main-content {
        margin-left: 240px; /* same as sidebar width */
        padding: 1rem;
      }

      /* Top navbar */
      .top-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 1rem;
        background-color: var(--card-bg);
        margin-bottom: 1rem;
        border-radius: 4px;
      }

      .top-nav .user-info {
        display: flex;
        align-items: center;
      }

      .top-nav .user-info img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 0.75rem;
      }

      /* Dashboard cards */
      .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
      }

      .card-custom {
        background-color: var(--card-bg);
        border: none;
        border-radius: 8px;
        padding: 1rem;
        color: var(--text-color);
      }

      .card-custom .card-title {
        font-weight: bold;
      }

      /* Example chart area */
      .chart-container {
        background-color: var(--card-bg);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
      }

      .footer {
        text-align: center;
        margin-top: 1rem;
        color: var(--muted-text-color);
      }
    </style>
  </head>

  <body>
    <!-- SIDEBAR -->
    <div class="sidebar">
      <div class="brand">Aarogyam</div>
      <div class="profile-section">
        <img src="#" alt="admin_profile" />
        <h6>Sarah Smith (Admin)</h6>
      </div>
      <ul>
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Doctor Dashboard</a></li>
        <li><a href="#">Patient Dashboard</a></li>
        <li><a href="#">Appointments</a></li>
        <li><a href="#">Health Records</a></li>
        <li><a href="#">Certificate Generator</a></li>
        <li><a href="#">Logout</a></li>
      </ul>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
      <!-- TOP NAV / USER INFO -->
      <div class="top-nav">
        <h4 class="mb-0">Admin Dashboard</h4>
        <div class="user-info">
          <img src="#" alt="user_profile"/>
          <span>Ellie Jones</span>
        </div>
      </div>

      <!-- DASHBOARD CARDS -->
      <div class="dashboard-cards">
        <!-- Total Appointments Card -->
        <div class="card-custom">
          <div class="card-title">Total Appointments</div>
          <div class="card-body">
            <h2><%= typeof totalappointments !== 'undefined' ? totalappointments : 'N/A' %></h2>
          </div>
        </div>

        <!-- Total Doctors Card -->
        <div class="card-custom">
          <div class="card-title">Total Doctors</div>
          <div class="card-body">
            <h2><%= typeof totaldoctors !== 'undefined' ? totaldoctors : 'N/A' %></h2>
          </div>
        </div>

        <!-- Total Patients Card -->
        <div class="card-custom">
          <div class="card-title">Total Patients</div>
          <div class="card-body">
            <h2><%= typeof totalpatients !== 'undefined' ? totalpatients : 'N/A' %></h2>
          </div>
        </div>
      </div>

      <!-- Appointments Section -->
      <div class="col-md-8 mb-5">
        <div class="card text-white bg-dark">
            <div class="card-header d-flex justify-content-between">
                <span>Appointments</span>
                <a href="/appointments" class="text-white">View All</a>
            </div>
            <div class="card-body">
                <table class="table text-white">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Assigned Doctor</th>
                            <th>Date</th>
                            <th>Reason</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% appointments.forEach(appointment => { %>
                            <tr>
                                <td><%= appointment.patientId.username %></td>
                                <td>
                                    <a href="/doctor/<%= appointment.doctorId._id %>" class="text-primary">
                                        <%= appointment.doctorId.username %>
                                    </a>
                                </td>
                                <td><%= new Date(appointment.date).toDateString() %></td>
                                <td><%= appointment.reason %></td>
                                <td><%= appointment.status %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>

      <!-- Doctors Section -->
      <div class="col-md-8 mb-5">
        <div class="card text-white bg-dark">
            <div class="card-header d-flex justify-content-between">
                <span>Doctors</span>
                <a href="/doctors" class="text-white">View All</a>
            </div>
            <div class="card-body">
                <table class="table text-white">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Specialization</th>
                            <th>Experience (Years)</th>
                            <th>Hospital</th>
                            <th>Consultant Fees</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% doctors.forEach(doctor => { %>
                            <tr>
                                <td><%= doctor.username %></td>
                                <td><%= doctor.email %></td>
                                <td><%= doctor.specialization %></td>
                                <td><%= doctor.experience %></td>
                                <td><%= doctor.hospital %></td>
                                <td><%= doctor.consultantFees %></td>
                                <td><%= doctor.phone %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>

      <!-- Patients Section -->
      <div class="col-md-8">
        <div class="card text-white bg-dark">
            <div class="card-header d-flex justify-content-between">
                <span>Patients</span>
                <a href="/patients" class="text-white">View All</a>
            </div>
            <div class="card-body">
                <table class="table text-white">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th>Height (cm)</th>
                            <th>Weight (kg)</th>
                            <th>Blood Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% patients.forEach(patient => { %>
                            <tr>
                                <td><%= patient.username %></td>
                                <td><%= patient.email %></td>
                                <td><%= patient.gender %></td>
                                <td><%= patient.age %></td>
                                <td><%= patient.height %></td>
                                <td><%= patient.weight %></td>
                                <td><%= patient.bloodType %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>

      <!-- FOOTER -->
      <div class="footer mt-4">
        <small>
            &copy; <script>document.write(new Date().getFullYear());</script> Arogyam. All rights reserved.
        </small>
      </div>
    </div>
</body>
</html>
