<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Optional: Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2Dhcn4s1urUqWf2c2F+3fbyGzwixQ08i9OR8Ep/67v6BM0BHTA4j4F4Xrl1Pb1Rsw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Custom CSS (you can move this to a separate .css file) -->
    <style>
      :root {
        --sidebar-bg: #222e3c;
        --sidebar-active: #2f3f50;
        --primary-color: #ff6600; /* or your orange accent */
        --text-color: #fff;
        --muted-text-color: #aaa;
        --card-bg: #2c3949;
        --body-bg: #1f2937;
      }

      body {
        background-color: var(--body-bg);
        color: var(--text-color);
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      .sidebar {
        width: 240px;
        background-color: var(--sidebar-bg);
        min-height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
      }

      .sidebar .brand {
        padding: 1rem;
        font-size: 1.25rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--primary-color);
        border-bottom: 1px solid #444;
      }

      .sidebar .profile-section {
        text-align: center;
        padding: 1rem;
      }

      .sidebar .profile-section img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 0.5rem;
      }

      .sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar ul li {
        border-bottom: 1px solid #444;
      }

      .sidebar ul li a {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        color: var(--text-color);
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

      .sidebar ul li a:hover {
        background-color: var(--sidebar-active);
      }

      .sidebar ul li a i {
        margin-right: 0.5rem;
      }

      .main-content {
        margin-left: 240px; /* same as sidebar width */
        padding: 1rem;
      }

      /* Top navbar */
      .top-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 1rem;
        background-color: var(--card-bg);
        margin-bottom: 1rem;
        border-radius: 4px;
      }

      .top-nav .user-info {
        display: flex;
        align-items: center;
      }

      .top-nav .user-info img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 0.75rem;
      }

      /* Dashboard cards */
      .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
      }

      .card-custom {
        background-color: var(--card-bg);
        border: none;
        border-radius: 8px;
        padding: 1rem;
        color: var(--text-color);
      }

      .card-custom .card-title {
        font-weight: bold;
      }

      /* Example chart area */
      .chart-container {
        background-color: var(--card-bg);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
      }

      .footer {
        text-align: center;
        margin-top: 1rem;
        color: var(--muted-text-color);
      }
    </style>
  </head>

  <body>
    <!-- SIDEBAR -->
    <div class="sidebar">
      <div class="brand">
        Aarogyam <!-- Or your app name -->
      </div>
      <div class="profile-section">
        <img
          src="https://via.placeholder.com/60"
          alt="Admin Profile"
        />
        <h6 class="mt-2">Sarah Smith (Admin)</h6>
      </div>
      <ul>
        <li>
          <a href="#">
            <i class="fas fa-home"></i> Dashboard
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fas fa-user-md"></i> Doctor Dashboard
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fas fa-user-injured"></i> Patient Dashboard
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fas fa-calendar-check"></i> Appointments
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fas fa-file-medical"></i> Health Records
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fas fa-file"></i> Certificate Generator
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </li>
      </ul>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
      <!-- TOP NAV / USER INFO -->
      <div class="top-nav">
        <h4 class="mb-0">Admin Dashboard</h4>
        <div class="user-info">
          <img
            src="https://via.placeholder.com/40"
            alt="User Profile"
          />
          <span>Ellie Jones</span>
        </div>
      </div>

      <!-- DASHBOARD CARDS -->
      <div class="dashboard-cards">
        <!-- Appointment Card -->
        <div class="card-custom">
          <div class="card-title">Appointments</div>
          <div class="card-body">
            <h2>
              <%= typeof totalappointments !== 'undefined' ? totalappointments : 'N/A' %>
            </h2>                       
          </div>
        </div>

        <!-- Operations Card -->
        <div class="card-custom">
          <div class="card-title">Operations</div>
          <div class="card-body">
            <h2>
              <!-- DB: Insert dynamic count of operations -->
              80
            </h2>
          </div>
        </div>

        <!-- New Patients Card -->
        <div class="card-custom">
          <div class="card-title">New Patients</div>
          <div class="card-body">
            <h2>
              <!-- DB: Insert dynamic count of new patients -->
              125
            </h2>
          </div>
        </div>

        <!-- Earnings Card -->
        <div class="card-custom">
          <div class="card-title">Earnings</div>
          <div class="card-body">
            <h2>
              <!-- DB: Insert dynamic earnings -->
              â‚¹50,600
            </h2>
          </div>
        </div>
      </div>

      <!-- HOSPITAL SURVEY / CHARTS -->
      <div class="chart-container mb-4">
        <h5 class="mb-3">Hospital Survey (Monthly)</h5>
        <!-- DB: Insert chart or graph for new patients, etc. -->
        <!-- Example placeholder for Chart.js or ApexCharts -->
        <canvas id="hospitalChart" width="400" height="150"></canvas>
      </div>

      <!-- APPOINTMENTS STATS / EXAMPLE ROWS -->
      <div class="row">
        <div class="col-md-4">
          <div class="card-custom">
            <div class="card-title">Total Appointments</div>
            <div class="card-body d-flex justify-content-between">
              <div>
                <p>Completed</p>
                <h3>73</h3>
                <!-- DB: dynamic completed appointments -->
              </div>
              <div>
                <p>Upcoming</p>
                <h3>55</h3>
                <!-- DB: dynamic upcoming appointments -->
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card-custom">
            <div class="card-title">Revenue</div>
            <div class="card-body">
              <h3>$4,589</h3>
              <!-- DB: dynamic revenue -->
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card-custom">
            <div class="card-title">Doctor Status</div>
            <div class="card-body">
              <!-- DB: Loop through doctor status or show count -->
              <p>5 Active</p>
              <p>2 On Leave</p>
            </div>
          </div>
        </div>
      </div>

      <!-- FOOTER -->
      <div class="footer mt-4">
        <small>
            &copy; <script>document.write(new Date().getFullYear());</script> Arogyam. All rights reserved.
        </small>
      </div>
    </div>

    <!-- Bootstrap JS (Optional but recommended if using Bootstrap components) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    ></script>

    <!-- Optional: Chart.js or ApexCharts for charts -->
    <script
      src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"
    ></script>
    <script>
      // Example chart initialization
      const ctx = document.getElementById('hospitalChart').getContext('2d');
      const hospitalChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
          datasets: [
            {
              label: 'New Patients',
              data: [10, 20, 15, 25, 35, 30],
              borderColor: '#4CAF50',
              fill: false
            },
            {
              label: 'Operations',
              data: [5, 10, 7, 12, 9, 15],
              borderColor: '#FF6600',
              fill: false
            }
          ]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              labels: {
                color: '#fff'
              }
            }
          },
          scales: {
            x: {
              ticks: { color: '#fff' },
              grid: { color: 'rgba(255,255,255,0.1)' }
            },
            y: {
              ticks: { color: '#fff' },
              grid: { color: 'rgba(255,255,255,0.1)' }
            }
          }
        }
      });
    </script>

<div class="row mt-4">
  <!-- Appointments Section -->
  <div class="col-md-8">
      <div class="card text-white bg-dark">
          <div class="card-header d-flex justify-content-between">
              <span>Appointments</span>
              <a href="/appointments" class="text-white">View All</a>
          </div>
          <div class="card-body">
              <table class="table text-white">
                  <thead>
                      <tr>
                          <th>Patient Name</th>
                          <th>Assigned Doctor</th>
                          <th>Date</th>
                          <th>Diseases</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% appointments.forEach(appointment => { %>
                          <tr>
                              <td><%= appointment.patientName %></td>
                              <td>
                                  <a href="/doctor/<%= appointment.doctorId %>" class="text-primary">
                                      <%= appointment.assignedDoctor %>
                                  </a>
                              </td>
                              <td><%= appointment.date %></td>
                              <td>
                                  <span class="badge bg-warning text-dark"><%= appointment.disease %></span>
                              </td>
                              <td>
                                  <a href="/edit-appointment/<%= appointment.id %>" class="text-info">
                                      <i class="fas fa-edit"></i>
                                  </a>
                                  <a href="/delete-appointment/<%= appointment.id %>" class="text-danger ms-2">
                                      <i class="fas fa-trash"></i>
                                  </a>
                              </td>
                          </tr>
                      <% }) %>
                  </tbody>
              </table>
          </div>
      </div>
  </div>

  <!-- Doctor Status Section -->
  <div class="col-md-4">
      <div class="card text-white bg-dark">
          <div class="card-header d-flex justify-content-between">
              <span>Doctor Status</span>
              <a href="/doctors" class="text-white">View All</a>
          </div>
          <div class="card-body">
              <ul class="list-group list-group-flush">
                  <% doctors.forEach(doctor => { %>
                      <li class="list-group-item d-flex justify-content-between text-white">
                          <span>
                              <img src="<%= doctor.image %>" class="rounded-circle me-2" width="30" height="30">
                              <a href="/doctor/<%= doctor.id %>" class="text-primary"><%= doctor.name %></a>
                          </span>
                          <span class="badge <%= doctor.status === 'Available' ? 'bg-success' : 'bg-danger' %>">
                              <%= doctor.status %>
                          </span>
                      </li>
                  <% }) %>
              </ul>
          </div>
      </div>
  </div>
</div>

<!-- Operations Section -->
<div class="row mt-4">
  <div class="col-md-12">
      <div class="card text-white bg-dark">
          <div class="card-header d-flex justify-content-between">
              <span>Operations</span>
              <a href="/operations" class="text-white">View All</a>
          </div>
          <div class="card-body">
              <table class="table text-white">
                  <thead>
                      <tr>
                          <th>Patient Name</th>
                          <th>Doctors Team</th>
                          <th>Date of Operation</th>
                          <th>Duration</th>
                          <th>Anesthesia Type</th>
                          <th>Follow-Up Date</th>
                          <th>Report</th>
                          <th>Diseases</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% operations.forEach(operation => { %>
                          <tr>
                              <td><%= operation.patientName %></td>
                              <td>
                                  <% operation.doctorsTeam.forEach(doc => { %>
                                      <img src="<%= doc.image %>" class="rounded-circle me-1" width="30" height="30">
                                  <% }) %>
                              </td>
                              <td><%= operation.date %></td>
                              <td><%= operation.duration %></td>
                              <td><%= operation.anesthesia %></td>
                              <td><%= operation.followUpDate %></td>
                              <td>
                                  <a href="/reports/<%= operation.reportId %>" class="text-info">
                                      <i class="fas fa-file-medical"></i>
                                  </a>
                              </td>
                              <td>
                                  <span class="badge bg-warning text-dark"><%= operation.disease %></span>
                              </td>
                              <td>
                                  <a href="/edit-operation/<%= operation.id %>" class="text-info">
                                      <i class="fas fa-edit"></i>
                                  </a>
                                  <a href="/delete-operation/<%= operation.id %>" class="text-danger ms-2">
                                      <i class="fas fa-trash"></i>
                                  </a>
                              </td>
                          </tr>
                      <% }) %>
                  </tbody>
              </table>
          </div>
      </div>
  </div>
</div>
  </body>
</html>
